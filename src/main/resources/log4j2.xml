<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{[}{yellow}%style{%d{dd/MM/yyyy HH:mm:ss}}{magenta}%style{]}{yellow} %style{[}{yellow}%style{logger %logger{1} | thread %t}{cyan}%style{]}{yellow} %highlight{(%level)}: %msg\n" disableAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>